generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(cuid())
  email      String   @unique
  passwordHash String?
  createdAt   DateTime @default(now())
  firstName   String
  lastName    String?
  school     School?   @relation(fields: [schoolId], references: [id])
  schoolId   String?
  ratings    Rating[]
}
model Course {
  id          String   @id @default(cuid())
  code        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  school     School   @relation(fields: [schoolId], references: [id])
  schoolId   String
  ratings    Rating[]
}

model Rating {
  id          String   @id @default(cuid())
  author     User    @relation(fields: [authorId], references: [id])
  authorId   String
  rating     Int 
  review     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  course     Course  @relation(fields: [courseId], references: [id])
  courseId   String
}

model School {
  id          String   @id @default(cuid())
  name        String
  location    String
  users       User[]
  courses     Course[]
}